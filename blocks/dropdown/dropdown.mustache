<div class="{{#addClass}}{{.}} {{/addClass}}dropdown">
	{{#title}}
		<div class="dropdown__title">
			{{{.}}}
		</div>
	{{/title}}
	<button class="button-preset dropdown-current" type="button">
		<span class="dropdown-current__text">{{defaultValue}}</span>
		<span class="dropdown-current__icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 284.929 284.929"><path
		  d="M282.082 76.511l-14.274-14.273c-1.902-1.906-4.093-2.856-6.57-2.856-2.471 0-4.661.95-6.563 2.856L142.466 174.441 30.262 62.241c-1.903-1.906-4.093-2.856-6.567-2.856-2.475 0-4.665.95-6.567 2.856L2.856 76.515C.95 78.417 0 80.607 0 83.082c0 2.473.953 4.663 2.856 6.565l133.043 133.046c1.902 1.903 4.093 2.854 6.567 2.854s4.661-.951 6.562-2.854L282.082 89.647c1.902-1.903 2.847-4.093 2.847-6.565 0-2.475-.945-4.665-2.847-6.571z"/></svg>
    </span>
	</button>
	<div class="dropdown-hidden">
		<ul class="dropdown-list">
			{{#items}}
				<li class="dropdown-item">
					<button class="dropdown__value{{#isActive}} dropdown__value_selected{{/isActive}}" type="button"{{#value}}
							data-value="{{.}}"{{/value}}{{#filter}} data-filter="{{.}}"{{/filter}}>
						<span class="dropdown__value-text">{{{title}}}</span></button>
				</li>
			{{/items}}
		</ul>
	</div>
</div>